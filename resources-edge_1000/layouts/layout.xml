<resources>
	<layout id="MainLayout">
	    <label x="center" y="40%" text="@Strings.prompt" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER | Graphics.TEXT_JUSTIFY_VCENTER" font="Graphics.FONT_SYSTEM_MEDIUM"/>
	    
	    <label x="center" y="70%" text="@Strings.pressStart" color="Graphics.COLOR_RED" justification="Graphics.TEXT_JUSTIFY_CENTER | Graphics.TEXT_JUSTIFY_VCENTER" font="Graphics.FONT_SYSTEM_MEDIUM"/>
	    <label x="center" y="85%" text="@Strings.version" 	color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER | Graphics.TEXT_JUSTIFY_VCENTER" font="Graphics.FONT_TINY"/>
	</layout>
	<layout id="DataFieldsView1">
		<drawable id="DataFields" class="DrawableDataFields">
			<param name="title1">@Strings.speed</param>
			<param name="field1">:calculateSpeed</param>
			<param name="title2">@Strings.heartRate</param>
			<param name="field2">:calculateHeartRate</param>
			<param name="title3">@Strings.cadence</param>
			<param name="field3">:calculateCadence</param>
			<param name="title4">@Strings.distance</param>
			<param name="field4">:calculateDistance</param>
			<param name="fieldTitleMargin">15</param>
			<param name="fieldNumberMargin">15</param>
			<param name="titleFont">Graphics.FONT_SYSTEM_MEDIUM</param>
			<param name="numberFont">Graphics.FONT_NUMBER_HOT</param>
		</drawable>
	</layout>
	<layout id="DataFieldsView2">
		<drawable id="DataFields" class="DrawableDataFields">
			<param name="title1">@Strings.timeLap</param>
			<param name="field1">:calculateTimeLap</param>
			<param name="title2">@Strings.percentage</param>
			<param name="field2">:calculatePercentage</param>
			<param name="title3">@Strings.speedLap</param>
			<param name="field3">:calculateSpeedLap</param>
			<param name="title4">@Strings.distanceLap</param>
			<param name="field4">:calculateDistanceLap</param>
			<param name="fieldTitleMargin">15</param>
			<param name="fieldNumberMargin">15</param>
			<param name="titleFont">Graphics.FONT_SYSTEM_MEDIUM</param>
			<param name="numberFont">Graphics.FONT_NUMBER_HOT</param>
		</drawable>
	</layout>
	<layout id="DataFieldsView3">
		<drawable id="DataFields" class="DrawableDataFields">
			<param name="title1">@Strings.time</param>
			<param name="field1">:calculateTime</param>
			<param name="title2">@Strings.altitude</param>
			<param name="field2">:calculateAltitude</param>
			<param name="title3">@Strings.avgSpeed</param>
			<param name="field3">:calculateAvgSpeed</param>
			<param name="title4">@Strings.distance</param>
			<param name="field4">:calculateDistance</param>
			<param name="fieldTitleMargin">15</param>
			<param name="fieldNumberMargin">15</param>
			<param name="titleFont">Graphics.FONT_SYSTEM_MEDIUM</param>
			<param name="numberFont">Graphics.FONT_NUMBER_HOT</param>
		</drawable>
	</layout>
	
</resources>
